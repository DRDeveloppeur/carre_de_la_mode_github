{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/informations.css') }}" />
{% endblock %}

{% block body %}
<main id="informations" class="log">
    <div class="container">
        <form method="POST">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
                <div class="mb-3">
                    vous êtes connecter avec le compte : {{ app.user.firstname }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}
        
            <h1 class="title-primary">Connexion</h1>

            <div class="grid-2_sm-1-center">
                <div class="col-4_sm-12">
                    <div class="field">
                        <label for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    </div>
                </div>
                
                <div class="col-4_sm-12">
                    <div class="field">
                        <label for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
                </div>
            </div>
        
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <p class="center">
                Pas encore de compte ? <a href="{{ path('app_register') }}">Créer votre compte.</a>
            </p>

            <div class="grid-center" style="margin-top: 59px;">
                <div class="col-center">
                    <button class="btn primary" type="submit">Se connecter</button>
                </div>
            </div>
        </form>
    </div>
</main>
{% endblock %}
